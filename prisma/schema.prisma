// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int      @default(autoincrement()) @id
  title     String
  description String
  details   Json
  price     Int
  listPrice Int
  weight    Int
  quantity  Int

  categories Category[]
  comments Comment[]
}

model Category {
  id        Int      @default(autoincrement()) @id
  title     String

  products Product[]
}

model Comment {
  id        Int      @default(autoincrement()) @id
  userName  String
  userPhone String
  userComment String
  userStar  Int @db.SmallInt

  product Product    @relation(fields: [productId], references: [id])
  productId Int
}

model Blog {
  id        Int      @default(autoincrement()) @id
  createdAt DateTime @default(now()) @db.Date
  title     String
  description String
  details   Json
}
